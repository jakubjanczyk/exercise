.container {
  margin-bottom: 24px;
  width: 500px;
}

.input {
  width: 100%;
  height: 34px;
  font-size: 1.2em;
  border-radius: 4px;
  padding: 4px 12px;
  border: 1px solid #b1b1b1;

  color: #4a4a4a;

  outline: none;

  &:focus {
    border: 1px solid #4280ff;
    box-shadow: 0 0 5px 0 #71c5ff;
  }
}
